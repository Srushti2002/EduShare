# Use official Node image
FROM node:18

# Set working directory
WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install

# Copy the rest of the code
COPY . .

# Build the React app
RUN npm run build

# Install simple HTTP server to serve static files
RUN npm install -g serve

# Expose port
EXPOSE 3000

# Start the frontend
CMD ["serve", "-s", "build"]
